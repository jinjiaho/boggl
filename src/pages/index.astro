---
import BogglBoard from "../components/BogglBoard.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="viewport"
      content="width=device-width, height=device-height, initial-scale=1, minimum-scale=1"
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://jinjiaho.github.io/boggl" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Bogglr" />
    <meta property="og:description" content="Online Boggle board generator" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:title" content="Bogglr" />
    <meta name="twitter:description" content="Online Boggle board generator" />

    <meta name="description" content="Online Boggle board generator" />

    <meta name="generator" content={Astro.generator} />
    <link
      rel="preload"
      href="/fonts/SuperCorn.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <title>Bogglr</title>
  </head>
  <body>
    <style>
      @font-face {
        font-family: "Super Corn";
        src:
          url("/fonts/SuperCorn.woff2") format("woff2"),
          url("/fonts/SuperCorn.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      html,
      body {
        box-sizing: border-box;
        width: 100%;
        max-width: 100vw;
        margin: 0;
        padding: 0;
        font-style: normal;
      }

      body {
        background-image: linear-gradient(45deg, orangered, orange);
        background-repeat: no-repeat;
        background-size: 100%;
        box-sizing: border-box;
        overflow: hidden;
        font-family: "Super Corn", sans-serif;
        letter-spacing: 0.2rem;
        display: flex;
        align-items: center;
        flex-direction: column;
        min-height: 100vh;
      }
      main {
        flex-shrink: 0;
        flex-grow: 1;
      }
      footer {
        text-align: center;

        & ul {
          list-style: none;
          padding-inline-start: 0;

          & li {
            padding: 0.125rem;
          }
        }
      }
    </style>
    <main>
      <BogglBoard />
    </main>
    <footer>
      <ul>
        <li>
          <a
            href="https://www.fontspace.com/super-corn-font-f102376"
            target="_blank"
          >
            Super Corn by All Super Fonts</a
          > License: Freeware
        </li>
        <li>
          <a href="https://freesound.org/s/371581/" target="_blank"
            >"Time's up" - Calm Male by Iceofdoom</a
          > License: Attribution 4.0
        </li>
      </ul>
    </footer>
  </body>
</html>
